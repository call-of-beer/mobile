<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:fontFamily="casual"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/testing"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Przetrwane degustacje"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/amountOfTesting"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="7"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/beers"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wypite piwska"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/beersAmount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="21"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:baselineAligned="false">

            <Button
                android:id="@+id/createTesting"
                android:layout_width="0dip"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_create_black_24dp"
                android:text="Rozpocznij degustację"/>

            <Button
                android:id="@+id/createGroup"
                android:layout_width="0dip"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_person_add_black_24dp"
                android:text="Stwórz grupę"/>

            <Button
                android:id="@+id/seeStatistics"
                android:layout_width="0dip"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_statistic_black_24dp"
                android:text="Statystyki"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/beersCollection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="126dp"
        android:text="Baza piw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:textSize="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>