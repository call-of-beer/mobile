<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logobeer1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/appName"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:baselineAligned="false"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">

            <Button
                android:id="@+id/createTesting"
                android:layout_width="0dip"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/hanaleifill"
                android:drawableTop="@drawable/ic_create_black_24dp"
                android:text="Rozpocznij degustację"/>

            <Button
                android:id="@+id/createGroup"
                android:layout_width="0dip"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/hanaleifill"
                android:drawableTop="@drawable/ic_person_add_black_24dp"
                android:text="Stwórz grupę"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/beersCollection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="126dp"
        android:text="Baza piw"
        android:fontFamily="@font/hanaleifill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:textSize="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>